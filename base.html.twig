<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}{{ title | default('Untitled Page') }}{% if site_name %} | {{ site_name }}{% endif %}{% endblock %}</title>

    {% if description %}
    <meta name="description" content="{{ description }}">
    {% endif %}
{% if tags is defined and tags %}
{% if tags is iterable %}
{% if tags|length > 0 %}
    <meta name="keywords" content="{{ tags|join(', ') }}">
{% endif %}
{% else %}
    <meta name="keywords" content="{{ tags }}">
{% endif %}
{% endif %}
    <link rel="stylesheet" href="{{ site_base_url }}assets/css/main.css?{{ cache_buster }}">

    {% block head %}{% endblock %}
</head>
<body>
    <div class="terminal-container">
        <div class="terminal-header">
            <div class="terminal-buttons">
                <span class="button red"></span>
                <span class="button yellow"></span>
                <span class="button green"></span>
            </div>
            <div class="terminal-title">{% block terminal_title %}{{ site_name | default('StaticForge Terminal') }}{% endblock %}</div>
        </div>

        <div class="terminal-body">
            <div class="prompt">{% block prompt %}cat welcome.txt{% endblock %}</div>

            <header>
                {% block header %}
                <h1>{% block site_title %}StaticForge Terminal{% endblock %}</h1>
                <p>{% block site_description %}> A PHP-based static site generator{% endblock %}</p>
                {% endblock %}
            </header>

            <nav>
                {% block navigation %}
                {% include 'menu1.html.twig' %}
                {% endblock %}
            </nav>

            <main>
                <div class="content">
                    {% block content %}
                    {{ content | raw }}
                    {% endblock %}
                </div>
            </main>

            <footer>
                {% block footer %}
                {% include 'menu2.html.twig' %}
                <p>{% block copyright %}© {{ "now" | date("Y") }} {{ site_name | default('StaticForge Terminal') }}. Built with ❤️ and PHP.{% endblock %}</p>
                {% endblock %}
            </footer>
        </div>
    </div>

    <script src="{{ site_base_url }}assets/js/main.js"></script>
    {% block scripts %}{% endblock %}
</body>
</html>